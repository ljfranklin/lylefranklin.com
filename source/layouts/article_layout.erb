<% wrap_layout :page_layout do %>
  <ol class="breadcrumb">
    <li><a href="/#/blog">< Back</a></li>
  </ol>
  <article class="panel panel-default">
    <div class="panel-heading">
      <a class="panel-title" href="<%= current_article.url %>">
        <%= current_article.title %>
      </a>
      <small>
        <%= current_article.date.strftime('%b %e %Y') %>
      </small>
    </div>
    <div class="panel-body">
      <%= yield %>
    </div>
  </article>
<% end %>
