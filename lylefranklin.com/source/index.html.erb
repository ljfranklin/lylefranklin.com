<!doctype html>
<html ng-app="homepageApp">
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "lyle:~$" %></title>

    <% pages = get_templates("pages") %>
    <% pages.each do |page_partial| %> 
      <% wrap_layout :ng_template_layout do %>
        <%= partial_with_layout page_partial, :page_layout %>
      <% end %>
    <% end %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <%= stylesheet_link_tag "all" %>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <%= javascript_include_tag "all" %>
  </head>
  
  <body class="<%= page_classes %>">
    <div class="nav-bar">
      <div class="nav-link nav-home">
        <a href="/#/">
          lyle:~$
        </a>
      </div>
      <div class="nav-links">
        <div class="nav-link">
          <a href="/#/work">
            work
          </a>
        </div>
        <div class="nav-link">
          <a href="/#/resume">
            resume
          </a>
        </div>
        <div class="nav-link">
          <a href="/#/about">
            about
          </a>
        </div>
      </div>
    </div>
    <div class="page-container">
      <div class="reveal-animation" ng-view></div>
    </div>
  </body>
</html>
