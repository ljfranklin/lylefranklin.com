<h1>
  WORK
</h1>
<% data.work.descriptions.each do |w| %>
<div class="media">
  <div class="media-left">
    <img class="media-object thumbnail" src="/images/<%= w.image %>">
  </div>
  <div class="media-body">
    <h4 class="media-heading">
      <a href="<%= w.company_link %>" target="_blank">
        <%= w.name %>
      </a>
      <small>
        <%= w.position %>
      </small>
      <small>
        <%= "#{w.start_date} - #{w.end_date} | #{w.location}" %>
      </small>
    </h4>
    <%= w.text %>
  </div>
</div>
<% end %>
